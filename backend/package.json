{
  "name": "alkosto-ai-assistant",
  "version": "1.0.0",
  "description": "Intelligent sales assistant for Alkosto with graduated search logic",
  "main": "web-server.js",
  "type": "module",
  "scripts": {
    "start": "node web-server.js",
    "dev": "node --watch web-server.js",
    "test": "node --test",
    "test-agent": "pnpm tsx src/alkosto-graduated-search-agent.ts",
    "test-manual": "node test-manual.js",
    "build": "echo 'No build step needed for this project'",
    "health": "curl -s http://localhost:3000/health | jq",
    "debug": "node --inspect web-server.js",
    "lint": "eslint *.js src/**/*.{js,ts}",
    "format": "prettier --write *.js src/**/*.{js,ts}",
    "logs": "tail -f logs/alkosto-ai.log",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "deploy": "echo 'Deployment script - to be configured'",
    "backup": "cp -r src/ backup/src-$(date +%Y%m%d-%H%M%S)/",
    "install-dev": "npm install && npm run test-agent"
  },
  "keywords": [
    "ai",
    "chatbot",
    "e-commerce",
    "sales-assistant",
    "langchain",
    "alkosto",
    "spanish",
    "colombia"
  ],
  "author": {
    "name": "Philipp Hasskamp",
    "email": "philipp.hasskamp@example.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@langchain/community": "^0.0.20",
    "@langchain/openai": "^0.0.14",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.21.2",
    "langchain": "^0.1.25",
    "openai": "^4.28.0",
    "papaparse": "^5.4.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@types/papaparse": "^5.3.14",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/username/alkosto-ai-assistant.git"
  },
  "bugs": {
    "url": "https://github.com/username/alkosto-ai-assistant/issues"
  },
  "homepage": "https://github.com/username/alkosto-ai-assistant#readme",
  "config": {
    "port": "3000",
    "agent_timeout": "30000",
    "max_message_length": "1000"
  },
  "pnpm": {
    "overrides": {
      "@langchain/core": "^0.1.25"
    }
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "prefer-const": "error"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "src/**/*.js",
      "!node_modules/**"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "*.js",
      "src/"
    ],
    "ext": "js,json,ts",
    "ignore": [
      "node_modules/",
      "public/",
      "logs/"
    ],
    "delay": "1000"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/username"
  },
  "files": [
    "web-server.js",
    "agent-router.js",
    "src/",
    "public/",
    "README.md",
    "LICENSE"
  ],
  "directories": {
    "lib": "./src",
    "test": "./tests",
    "doc": "./docs"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ]
}
